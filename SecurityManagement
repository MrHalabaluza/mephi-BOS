#!/bin/bash
echo 'Security Management

С помощью данной программы Вы можете управлять безопасностью файлов и каталогов

Разработали: Новиков, Галкина, Дудешева, Гарбуз, Рыбакова
'
f="true"

if [ -a "$1" ]&&[ $# == 1 ]; 
then
	:
else
	echo "Файл не указан либо неверное количество аргументов.
Введите путь до файла:"
	while [ "$f" == "true" ];
	do
		read path
		if [ -a "$path" ]
		then	
			f="false"	
		else
			echo "Указанный файл не существует. Повторите ввод:"
		fi
	done
fi
echo "Файл выбран верно"
